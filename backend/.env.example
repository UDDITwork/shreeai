# Server
PORT=3001
# Local: http://localhost:3000
# Production: https://your-app.vercel.app
CORS_ORIGIN=http://localhost:3000

# Database
TURSO_DATABASE_URL=your_turso_database_url
TURSO_AUTH_TOKEN=your_turso_auth_token

# AI Services
ANTHROPIC_API_KEY=your_anthropic_api_key
OPENAI_API_KEY=your_openai_api_key

# Vector Database
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_INDEX_NAME=smart-idea-manager

# Web Scraping
FIRECRAWLER_API_KEY=your_firecrawler_api_key

# Authentication
JWT_SECRET=your_jwt_secret_key_change_in_production

# Email Service
EMAIL_SERVICE=sendgrid
SENDGRID_API_KEY=your_sendgrid_api_key
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Gmail API (Optional - for email reading)
GMAIL_CLIENT_ID=your_gmail_client_id
GMAIL_CLIENT_SECRET=your_gmail_client_secret
GMAIL_REFRESH_TOKEN=your_gmail_refresh_token

# IMAP (Alternative to Gmail API)
IMAP_HOST=imap.gmail.com
IMAP_USER=your_email@gmail.com
IMAP_PASSWORD=your_app_password

# LinkedIn API (for posting to LinkedIn)
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
# Local: http://localhost:3001/api/linkedin/callback
# Production: https://your-cloudrun-url/api/linkedin/callback
LINKEDIN_REDIRECT_URI=http://localhost:3001/api/linkedin/callback

# Google OAuth Redirect (for Gmail & Sheets)
# Local: http://localhost:3001/api/google/callback
# Production: https://your-cloudrun-url/api/google/callback
GOOGLE_REDIRECT_URI=http://localhost:3001/api/google/callback

# Google Sheets API (uses same OAuth as Gmail)
# Required scopes in Google Cloud Console:
# - https://www.googleapis.com/auth/spreadsheets (read/write sheets)
# - https://www.googleapis.com/auth/drive.file (access files)
# Note: The Gmail credentials (GMAIL_CLIENT_ID, GMAIL_CLIENT_SECRET, GMAIL_REFRESH_TOKEN)
# are reused for Sheets API. Make sure to add the above scopes to your OAuth consent screen.

